<UserControl x:Class="RedisTool.Content.HelpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:rc="clr-namespace:RedisTool.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/1" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="About" Source="/1" />
            </mui:ModernTab.Links>

            <mui:ModernTab.ContentLoader>
                <rc:RedisContentLoader />
            </mui:ModernTab.ContentLoader>
        </mui:ModernTab>
    </Grid>
</UserControl>
