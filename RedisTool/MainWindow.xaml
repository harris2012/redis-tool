<mui:ModernWindow x:Class="RedisTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:local="clr-namespace:RedisTool"
        WindowStartupLocation="CenterScreen"
        Title="Redis Tool"
        Height="800" Width="1200" MinHeight="540" MinWidth="750"
        IsTitleVisible="True"
        ContentSource="/Pages/ReadPage.xaml">

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="Help" Source="/Content/HelpPage.xaml" />
    </mui:ModernWindow.TitleLinks>

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Welcome to use redis tool.">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Read" Source="/Pages/ReadPage.xaml" />
                <mui:Link DisplayName="Write" Source="/Pages/WritePage.xaml" />
                <mui:Link DisplayName="Remove" Source="/Pages/RemovePage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>
